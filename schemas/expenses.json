{
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "purpose": {
                "type": "string",
                "enum": [
                    "Food",
                    "Electricity",
                    "Medical",
                    "Starlink",
                    "Charcoal",
                    "Hygiene",
                    "Football",
                    "Pocket money",
                    "Gift",
                    "Electronics",
                    "Personal",
                    "Legal",
                    "Transportation",
                    "Maintenance",
                    "Test",
                    "Extra Food"
                ]
            },
            "amount": {  
                "anyOf": [    
                    { 
                        "type": "number"
                    }  
                ],
                "markdownDescription": "Either the _full amount_ or the _unit amount_ for the expense. Note that if this is the unit amount, then you need to provide a value for the `quantity` property."
            },
            "date": {
                "type": "string",
                "markdownDescription": "The _date_ when the payment is expected. If missing, this means that there is no due date for the payment."
            },
            "explanation": {
                "type": "string"
            },
            "paid": {
                "type": "boolean"
            },
            "quantity": {
                "type": "integer",
                "minimum": 1
            },
            "pal": {
                "type":"string",
                "enum": [
                    "Uncle"
                ],
                "markdownDescription": "The person who decides to help me afford my expenses."
            }
        },
